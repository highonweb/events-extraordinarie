doctype html
head
  meta(charset='UTF-8')
  title Invite Manager
  link(rel="stylesheet", href="css/login.css")
.login-page
  .form
    form.register-form(action='/' method='POST')
      input(type='text' name='username' placeholder='username')
      input(type='text' name='email' placeholder='email')
      input(type='password' name='password' placeholder='Enter password')
      input(type='password' name='passwordconf' placeholder='Confirm password')      
      button REGISTER
      p.message
        | Already registered? 
        a(href='#' onclick='logIn()') Sign In
    form.login-form(action='/' method='POST')
      input(type='text' name='logusername' placeholder='username')
      input(type='password' name='logpassword' placeholder='password')
      button LOGIN
      p.message
        | Not registered? 
        a(href='#' onclick='register()') Create an account
script(src="js/login.js")    

